{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "name": "SCM Version Configuration",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "default": {
      "type": "string"
    },
    "vcs": {
      "enum": [
        "any",
        "git",
        "mercurial",
        "darcs",
        "bazaar",
        "subversion",
        "fossil"
      ]
    },
    "pattern": {
      "type": "string",
      "format": "regex"
    },
    "metadata": {
      "type": "boolean"
    },
    "tagged-metadata": {
      "type": "boolean"
    },
    "dirty": {
      "type": "boolean"
    },
    "format": {
      "type": "string"
    },
    "format-jinja": {
      "type": "string"
    },
    "format-jinja-imports": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "module": {
            "type": "string"
          },
          "item": {
            "type": "string"
          }
        },
        "required": ["module"]
      }
    },
    "style": {
      "enum": [
        "pep440",
        "semver",
        "pvp"
      ]
    },
    "latest-tag": {
      "type": "boolean"
    },
    "bump": {
      "type": "boolean"
    }
  }
}
